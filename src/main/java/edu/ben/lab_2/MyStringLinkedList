package edu.ben.lab_2;

public class MyStringLinkedList implements MyStringList {

    StringNode head;

    public MyStringLinkedList(String value, String expected) {

    }

    public MyStringLinkedList(int value, int expected) {
    }

    public MyStringLinkedList() {

    }


    @Override
    public void add(String value) {
        if (head == null) {
            head = new StringNode();
            return;
        }

        StringNode current = head;
        while (current.hasNext()) {
            current = current.getNext();
        }
        current.setNext(new StringNode());

    }



    @Override
    public void clear() {
        head = null;
    }

    @Override

    public StringNode remove() {
        if (head == null)
            return null;
        if (head.getNext() == null) {
            return null;
        }
        StringNode secondLast = head;
        while (secondLast.getNext().getNext() != null)
            secondLast = secondLast.getNext();


        return head;
    }

    @Override
    public int size() {

        StringNode current = head;
        int length = 0;

        while (current != null) {
            current = current.getNext();
            length++;
        }
        return length;

    }


}


